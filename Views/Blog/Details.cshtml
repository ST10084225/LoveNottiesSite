@model LoveNottiesV2.Models.BlogItem

@{
    ViewData["Title"] = @Html.DisplayFor(model => Model.BlogTitle);
}
<body>
    <div class="m-5">
    <div class="card">
    <div class="card-header">
        <h1>@Html.DisplayFor(model => model.BlogTitle)</h1>
        <h6 class="card-subtitle text-muted">Views: @Html.DisplayFor(modelItem => Model.BlogViews) | Posted: @Html.DisplayFor(modelItem => Model.BlogDate)</h6>
    </div>

    <div class="card-body">
        <div class="box">
        <div class="justify-content-center">
                <image src="https://lovenottiesstoragetest.blob.core.windows.net/blogimages/@(Model.BlogID)" class="d-block user-select-none coverImageDetails ImageRoundBorders" height="650px" focusable="false" role="img"/>
        </div>
        
                    <div>
                        <dl>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BlogDescription)
                            </dd>
                        </dl>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
        </div>
    </div>
</div>
</div>
</body>