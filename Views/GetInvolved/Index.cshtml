    @*Actual HTMl code for the Page*@
<body>

    <br />
    <h1 class="centerForAll">Get Involved</h1>


    <div class="image-container">
       
        <img src=@("./Images/LNGI.jpg") alt="LNGI" />

    </div>

    <br />
    
    <div class="GI-Maps">
        <div class="map-header">
            <p>Information about donation centers to go here</p>
            <br />
            <p>Locations with details can be populated here (Will also be shown in the embeded map as dropped pins)</p>
            <br />
            <ul>
                <li>Location 1 example...</li>
                <li>Location 2 example...</li>
                <li>Location 3 example...</li>
            </ul>
        </div>

        <div class="emMap">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3477.521859425865!2d29.989993675527572!3d-29.35500547527793!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef3f9323e175d55%3A0x16e04c900668b838!2sLove%20Notties!5e0!3m2!1sen!2sza!4v1693835417430!5m2!1sen!2sza" ></iframe>

        </div>


    </div>

    <br />

    <div class="GI-Donate-Links">

        <div class="box">

            <div class="donateInfo">
                <p>Banking Details: For EFT and Debit Orders</p>
                <ul>
                    <li>Bank Name: XXXXXX</li>
                    <li>Branch Code: XXXXXX</li>
                    <li>Account Number: XXXXXX</li>                 
                    <li>Other Details go here......</li>

                </ul>
            </div>

            <div class="donateInfo">
                <p>Zapper QR Code:</p>
                <br />
                <p>QR Code to be placed here</p>
            </div>

            <div class="donateInfo">
                <p>Section 18a details go here</p>
                
            </div>

        </div>

    </div>

    <br />

    <div class="GI-Volunteer">

        <div class="volunteerInfo">
            <p>Voulteer Information</p>
            <p>Support Local Community</p>
            <p>Information regaring voluteering will be displayed here</p>
        </div>

        <div>
        <form>
            <div>
                <input type="text" id="name" name="name" required placeholder="First Name">
            </div>
            <br/>
            <div>
                <input type="text" id="surname" name="surname" required placeholder="Surname">
            </div>
            <br />
            <div>
                <input type="email" id="email" name="email" required placeholder="Email">
            </div>
            <br />
            <div>
                <input type="tel" id="cell" name="cell" required placeholder=" Cell Number">
            </div>
            <br />
            <div>
                <input type="submit" value="Submit">
            </div>

        </form>
        </div>

    </div>

    <br />
    <br />
    <br />
    <br />
    <br />





</body>
