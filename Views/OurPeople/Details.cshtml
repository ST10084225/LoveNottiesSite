@model LoveNottiesV2.Models.OurPeople

@{
    string fullName = Model.OurPersonFirstName + " " + Model.OurPersonLastName;
    ViewData["Title"] = fullName;
}
<body>
    <div class="m-5">
        <div class="card">
            <div class="card-header">
                <h1>@Html.DisplayFor(model => model.OurPersonFirstName) @Html.Raw(" ") @Html.DisplayFor(model => model.OurPersonLastName)</h1>
                <h6 class="card-subtitle text-muted">@Html.DisplayFor(model => model.OurPersonTitle)</h6>
            </div>

            <div class="card-body">
                <div class="box">
                    <div class="justify-content-center">
                        <image src="https://lovenottiesstoragetest.blob.core.windows.net/ourpeopleimages/@(Model.OurPersonID)" class="d-block user-select-none coverImageDetails ImageRoundBorders" height="650px" focusable="false" role="img" />
                    </div>

                    <div>
                        <dl>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.OurPersonDescription)
                            </dd>
                        </dl>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
